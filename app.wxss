/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.ell{/*超出部分，...代替 */
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.divider{
  height:30rpx;
  background:#f1f1f1;
}
.cell{
  background-color:#fff;
  font-size:16px;
}
.cell-item{
  padding:20rpx 30rpx;
  border-bottom:1rpx solid #ddd;
}
.arrow{
  display:flex;
  justify-content: space-between;
  align-items: center;
}
/* 箭头 */
.arrow::after{
  content:"";
  width:15rpx;
  height:15rpx;
  border-top:3rpx solid #ccc;
  border-right: 3rpx solid #ccc;
  transform:rotate(45deg);

}
.card{
  border: 1px solid #ccc;
  border-radius: 10rpx;
  margin:40rpx 20rpx;
  font-size:16px;
  padding:30rpx;
  display:flex;
  flex-direction: column;
  background-color:#fff;
}
.card .card-item{
 padding:10rpx;
  border-bottom:1px solid #ccc;
}
